<Page x:Class="Dice_Simulator.Dice_1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dice_Simulator"
      mc:Ignorable="d" 
      d:DesignHeight="239" d:DesignWidth="525"
      Title="Dice_1" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Viewbox>
            <Button x:Name="Roll" Content="ROLL" Width="30" Height="15" Click="Roll_Click" FontWeight="Bold" FontSize="8"/>
        </Viewbox>

        <Viewbox Grid.Column="1" Grid.Row="0">
            <Image x:Name="DiceResultIMG" Height="30" Width="30"/>
        </Viewbox>

        <Viewbox Grid.Column="1" Grid.Row="1">
            <TextBlock x:Name="DiceResultNUM" Text="2" Height="30" Width="15" FontSize="24" TextAlignment="Center" FontWeight="Bold" />
        </Viewbox>

    </Grid>
</Page>
